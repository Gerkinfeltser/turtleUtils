local tArgs = {...}
local length = tonumber(tArgs[1]) or 8
local width = tonumber(tArgs[2]) or 8
local height = tonumber(tArgs[3]) or 16
local turnRight = true
local slot = 1

term.clear()
term.getCursorPos(1,1)
print("Fill me up please and hit a key")

local event, key = os.pullEvent("key")
if key then print("Ready. Starting in:") end

for i=3, 1, -1 do
  print(i.."...")
  sleep(1)
end

print("Out of the way!")

turtle.select(slot)
-- Height
for k = 1, height do
  turtle.up()
  -- Width
  for j = 1, width do
    -- Length
    for i = 1, length do
      if turtle.getItemCount(slot) == 0 then
        slot = slot + 1
        if slot > 16 then
          slot = 1
        end
        turtle.select(slot)
        turtle.placeDown()
      else
        turtle.placeDown()
      end
      if i < length then
        turtle.forward()
      end
    end
    -- turn right or left
    if j < width then
      if turnRight == true then
        turtle.turnRight()
        turtle.forward()
        turtle.turnRight()
        turnRight = false
      else
        turtle.turnLeft()
        turtle.forward()
        turtle.turnLeft()
        turnRight = true
      end
    end
  end
  turtle.turnRight()
  turtle.turnRight()
end
print("Done")