local tArgs = {...}
local length = tonumber(tArgs[1]) or 8
local width = tonumber(tArgs[2]) or 8
local height = tonumber(tArgs[3]) or 16
local turnRight = true
local slot = 1

turtle.select(slot)
-- Height
for k = 1, height do
  turtle.up()
  -- Width
  for j = 1, width do
    -- Length
    for i = 1, length do
      if turtle.getItemCount(slot) == 0 then
        slot = slot + 1
        if slot > 16 then
          slot = 1
        end
        turtle.select(slot)
        turtle.placeDown()
      else
        turtle.placeDown()
      end
      if i < length then
        turtle.forward()
      end
    end
  end
  turtle.turnRight()
  turtle.turnRight()
end