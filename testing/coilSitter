Side = "front"
coilChargeLvl = rs.redstone.getAnalogInput(Side)
coilMaxAllowance = 12
isPaused = false

while not isPaused do
	if coilChargeLvl >= coilMaxAllowance then
		term.clear()
		print("Coil charged to "..coilChargeLvl.."/15")
		print("Holding...")
		rs.redstone.setOutput(Side, true)
		isPaused = true
	else
		term.clear()
		print("Coil charged to "..coilChargeLvl.."/15")
		rs.redstone.setOutput(Side, false)
	end
end